                android:onClick="clicked"
                android:id="@+id/rightButton7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button"
                android:background="@drawable/gamebutton"
                android:onClick="clicked"
                android:id="@+id/rightButton8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button"
                android:background="@drawable/gamebutton"
                android:onClick="clicked"
                android:id="@+id/rightButton9" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>